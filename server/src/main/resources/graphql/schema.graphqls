
type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}

type Card {
    id: ID!
    cardName: String!
    cardRarity: String!
    cardSet: String!
    cardSetName: String!
    cardText: String!
}

type Query {
    getCardById(id: ID!): Card!
    getCardsBySet(cardSet: String!): [Card!]!
    getAllCards: [Card!]!
    bookById(id: ID): Book
}

type Mutation {
    addCard(cardName: String!, cardRarity: String!, cardSet: String!, cardSetName: String!, cardText: String!): Card!
}